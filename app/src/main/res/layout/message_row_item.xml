<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageRowLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="10dp"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/messageRl"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/box_bg"
        android:layout_marginRight="60dp">
        <TextView
            android:id="@+id/messageTv"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test message here! Whats up everybody?
            fefeefefefefef"
            android:gravity="left"
            android:padding="8dp"
            android:minHeight="20dip"
            android:textColor="@color/white"
            android:textAllCaps="false" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/usernameGrey"
            android:text="oddetallet"/>
        <TextView
            android:id="@+id/createdAtTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/createdAtGrey"
            android:alpha="0.5"
            android:layout_marginLeft="3dp"
            android:text="11.26"/>
    </LinearLayout>

</LinearLayout>
