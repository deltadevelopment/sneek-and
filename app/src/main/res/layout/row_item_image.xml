<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageRowLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="20dp"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/iDateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:text="Today"
        android:textAlignment="center"
        android:textColor="@color/dateTxt" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/white"
        android:padding="0dp">

        <no.twomonkeys.sneek.app.shared.views.SneekVideoView
            android:id="@+id/postVideoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:visibility="invisible" />

        <View
            android:id="@+id/videoViewRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </View>

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/draweeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="0dp"
            android:background="@color/white"
            android:padding="0dp"
            fresco:roundedCornerRadius="10dp" />

        <RelativeLayout
            android:id="@+id/loadingRl"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:background="@color/cameraGrey">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/playLoaderRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <no.twomonkeys.sneek.app.shared.views.PlayLoaderView
                android:id="@+id/playLoaderV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true">
            </no.twomonkeys.sneek.app.shared.views.PlayLoaderView>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oddetallet"
                android:textColor="@color/usernameGrey" />

            <TextView
                android:id="@+id/createdAtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:alpha="0.5"
                android:text="11.26"
                android:textColor="@color/createdAtGrey" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
