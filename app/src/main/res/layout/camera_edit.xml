<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_edit_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/circleBlue">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/cancel_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/exitx3" />

    <RelativeLayout
        android:id="@+id/camera_edit_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/caption_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:gravity="left|center_vertical"
            android:text="Tap to add caption"
            android:textAllCaps="false"
            android:textColor="@color/captionGrey" />

        <ImageButton
            android:id="@+id/download_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/downloadx3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_button"
            android:minHeight="30dip"
            android:minWidth="50dip"
            android:text="1 day"
            android:textAllCaps="false"
            android:textColor="@color/cameraGrey" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/sendx3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/caption_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backx3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cancel_caption"/>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:hint="One year later..."
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@null"
            android:textColor="@color/captionGrey"
            android:textColorHint="@color/captionGrey"
            android:maxLength="80"/>
    </RelativeLayout>
</RelativeLayout>
